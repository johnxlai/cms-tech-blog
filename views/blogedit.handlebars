<div class="flex flex-col w-50">
  <h1 class="text-white">
    User: {{id}}
    Username: {{username}}
  </h1>

  <div class="w-full">
    <form id="" class="edit-post-form bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <legend>Edit Post</legend>
      <input type="hidden" id="blog-id" name="blog-id" value="{{id}}">
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="post-title">
          Title
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="update-post-title" type="text" placeholder="post-title" value="{{title}}">
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="update-post-content">
          Content
        </label>
        <textarea
          class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 focus:outline-none focus:shadow-outline"
          id="update-post-content" name="post-content" placeholder="Add description">
            {{post_content}}
          </textarea>
      </div>
      <div class="flex items-center justify-between">
        <input
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit" value="Update">
        <button class="btn bg-red-500 text-white delete-btn" data-id="{{blog.id}}">DELETE</button>
        <button class="btn bg-green-500 text-white edit-btn" data-id="{{blog.id}}">EDIT</button>
      </div>
    </form>
  </div>
</div>


<script src="../../js/blogedit.js"></script>