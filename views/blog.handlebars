
<section class="mx-3 mb-8">
    <div class="flex justify-center">
      <div class="flex rounded-lg bg-white shadow-lg">
        <img class="h-96 w-full rounded-t-lg object-cover md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
          src="https://picsum.photos/200/300" alt="" />
        <div class="flex flex-col justify-start p-6">
          <h5 class="mb-2 text-xl font-medium text-slate-700">
            {{title}}
          </h5>
          <p class="mb-4 text-base text-neutral-600">
            {{ post_content }}
          </p>
          <p class="text-xs text-neutral-500">
          </p>
            <h2 id="blog-id">{{id}}</h2>

            <p>{{format_time createdAt}}</p>
            <p>{{format_date updatedAt}}</p>
            <p>Posted by {{ user.username }}</p>
        </div>
      </div>

    </div>
   {{#if loggedIn}}
    <form action="" id="comment-form">
      <textarea rows="4" cols="50" name="comment" form="comment-form" placeholder="new comment" class="comment-details text-black">
        </textarea>
      <input type="submit" class="btn bg-red-500 text-white">
    </form>
    {{/if}}
    <div class="add-commenter"></div>
    {{#each comments as |comment| }}
      <div class="rounded bg-white h-[50px]">
        <div class="addComments">
            <p>{{ comment.body}}</p>
        </div>
      </div>
    {{/each}}
</section>

<script src="../js/blog.js"></script>